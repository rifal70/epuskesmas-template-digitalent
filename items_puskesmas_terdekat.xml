<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/puskesTerdekat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="15dp"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:clipToPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/puskesImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_transparant"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_frame_login" />
        <!--                    bind:imgUrl="@{news.newsImage}" />-->

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/puskesNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text="Puskesmas Keliling"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_80"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puskesAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text="Jln. Apasaja Boleh"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_80"
            android:textSize="12sp" />
        <!--                android:text="@{news.newsTitle}"-->


    </LinearLayout>

</LinearLayout>