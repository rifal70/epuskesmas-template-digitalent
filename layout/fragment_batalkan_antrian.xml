<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_up"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingin Membatalkan Antrian?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="30dp"
            android:id="@+id/tv_tanya"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jika membatalkan antrian, maka nomor Anda akan hangus."
            android:layout_marginLeft="32dp"
            android:textSize="12sp"
            android:layout_marginRight="100dp"
            android:layout_below="@+id/tv_tanya"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_keterangan"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_keterangan"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tidak"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_tidak"
                android:text="Tidak"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:textColor="@color/primary2"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/primary2"
                app:strokeWidth="2dp"
                />
            <Button
                android:id="@+id/btn_ya"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/primary2"
                android:text="Ya"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>