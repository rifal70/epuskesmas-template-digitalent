<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_header"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_backbutton" />

        <TextView
            android:id="@+id/tv_poliname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:text="Poli Gigi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/rectangle"
            android:layout_marginTop="55dp"/>
    </androidx.cardview.widget.CardView>

        <ImageView
        android:id="@+id/img_headerPoli"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@+id/cv_header"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_example_poli" />

    <TextView
        android:id="@+id/tv_keteranganPoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_headerPoli"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:justificationMode="inter_word"
        android:text="Layanan di puskesmas yang memberikan pelayanan kesehatan gigi dan mulut berupa pemeriksaan kesehatan gigi dan mulut, pengobatan dan pemberian tindakan medis dasar kesehatan gigi dan mulut seperti penambalan gigi, pencabutan gigi dan pembersihan karang gigi."
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/pembatas"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_keteranganPoli"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/rectangle" />

    <TextView
        android:id="@+id/tv_pilihTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pembatas"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Pilih Tanggal"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/tv_pilihTanggal"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_pilihTanggal"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pilih Tanggal"
            android:textSize="14sp"
            android:inputType="date"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date"
            android:layout_marginLeft="8dp"
            android:id="@+id/date_picker"
            android:onClick="datePicker"/>
    </LinearLayout>
</RelativeLayout>

